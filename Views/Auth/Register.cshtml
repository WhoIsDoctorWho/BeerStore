@model BeerStore.Models.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<form asp-action="Register" asp-controller="Auth" asp-antiforgery="true" method="post" enctype="multipart/form-data">
    <div>
        <div>
            <label asp-for="Email"></label>
            <input asp-for="Email" />
        </div>
        <div>
            <label asp-for="Fullname"></label>
            <input type="text" asp-for="Fullname" />
        </div>
        <div>
            <label asp-for="Password"></label>
            <input asp-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input name="avatar" type="file" />
        </div>
        <div>
            <input type="submit" value="Save" />
        </div>
    </div>
</form>