@model User
@{
    ViewData["Title"] = "User";
}

<div class="container text-center">
    <h1>@Model.Fullname</h1>
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <img src="@Model.AvaUrl" width="400" height="600" class="mx-auto rounded">
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <p>Login: @Model.Login</p>
            <p>Registered: @Model.Registered.Date</p>
        </div>
    </div>
</div>